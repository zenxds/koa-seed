{
  "name": "koa-boilerplate",
  "version": "0.4.0",
  "description": "koa-boilerplate",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=dev nodemon index.js",
    "start:docker": "pm2-docker ecosystem.config.js --env production",
    "test": "NODE_ENV=test jest --forceExit",
    "lint": "eslint app/**/*.js script/**/*.js",
    "prettier": "prettier app/**/*.js script/**/*.js test/**/*.js --write",
    "deploy:docker": "node script/updateVersion.js && docker-compose up -d --build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{app,script,test}/**/*.js": [
      "yarn test",
      "yarn lint",
      "yarn prettier",
      "git add"
    ]
  },
  "dependencies": {
    "config": "^2.0.1",
    "mysql2": "^1.6.1",
    "pm2": "^3.0.4",
    "redis-promisify": "^0.1.1",
    "sequelize": "^4.38.0",
    "the-rang": "^0.3.4"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:zenxds/koa-boilerplate.git"
  },
  "devDependencies": {
    "eslint": "4.19.1",
    "husky": "^1.3.1",
    "jest": "^23.4.1",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.17.3",
    "prettier": "^1.15.3",
    "supertest": "^3.0.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/config/"
    ]
  }
}
